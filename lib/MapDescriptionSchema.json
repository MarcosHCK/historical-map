{
  "$defs":
    {
      "ActionDescription":
        {
          "additionalProperties": false,
          "properties":
            {
              "name": { "type": "string" }
            },
          "required": [ "name" ],
          "type": "object"
        },
      "MapDescription":
        {
          "additionalProperties": false,
          "properties":
            {
              "cursor": { "format": "uri-relative", "type": "string" },
              "scale": { "type": "number" },
              "spots": { "items": { "$ref": "#/$defs/SpotDescription" }, "type": "array" },
              "textureFile": { "format": "uri-relative", "type": "string" },
              "version": { "pattern": "^[0-9]+\\.[0-9]+$", "type": "string" },
              "walkFile": { "format": "uri-relative", "type": "string" }
            },
          "required": [ "textureFile", "version", "walkFile" ],
          "type": "object"
        },
      "SpotDescription":
        {
          "additionalProperties": false,
          "properties":
            {
              "actions": { "items": { "$ref": "#/$defs/ActionDescription" }, "type": "array" },
              "code": { "maxLength": 7, "minLength": 7, "pattern": "^#[0-9a-f]{6}$", "type": "string" }
            },
          "required": [ "actions", "code" ],
          "type": "object"
        }
    },
  "$ref": "#/$defs/MapDescription",
  "$schema": "http://json-schema.org/draft-07/schema#"
}